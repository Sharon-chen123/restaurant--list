<h1 class="mb-1 restaurant-show-title">create</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <form action="/restaurants" method="POST">
        <div class="form-group">
          <span class="text-secondary">
            <i class="fas fa-store pr-1"></i>
            店名：
          </span>
          <input type="text" name="name" id="name" required>
        </div>
        <div class="form-group">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          <input type="text" name="category" id="category" required>
        </div>
        <div class="form-group">
          <span class="text-secondary">
            <i class="fas fa-pen"></i>
            評分：
          </span>
          <input type="number" name="rating" id="rating" required>
        </div>
        <div class="form-group">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          <input type="text" name="location" id="location" class="form-control form-control-lg" required>
        </div>
        <div class="form-group">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          <input type="text" name="phone" id="phone" required>
        </div>
        <div class="form-group">
          <span class="text-secondary">
            <i class="fas fa-book-open"></i>
            簡介：
          </span>
          <textarea name="description" id="description" class="form-control form-control-lg" rows="3"
            required></textarea>
        </div>
        <div class="form-group">
          <span class="text-secondary">
            <i class="fas fa-image"></i>
            圖片：
          </span>
          <input type="text" name="image" id="image" class="form-control form-control-lg" required>
        </div>
        <div class="form-group d-flex justify-content-center align-items-center">
          <button type="submit" class="btn btn-primary">新增</button>
        </div>
      </form>
    </div>
  </div>
</div>